@model Dish
<div class="container" style="max-width:600px;padding:40px 20px; background:#ebeff2">
   <h3><a href="/dishes" class="btn btn-primary">Home</a></h3>
   <h1 class="text-center">Edit a Dish!</h1>
   <hr>
   <form class="form-horizontal" role="form"  asp-action="Update" asp-controller = "Home" method="post">
      <div class="form-group">
         <label asp-for="Name" class ="control-label col-sm-3"></label>
         <span asp-validation-for="Name" class="text-danger"></span>
         <div class="col-sm-8">
            <input type="text" asp-for="Name" class="form-control">
         </div>
      </div>
      <div class="form-group">
         <label asp-for="Calories" class ="control-label col-sm-3"></label>
         <span asp-validation-for="Calories" class="text-danger"></span>
         <div class="col-sm-8">
            <input type="text" asp-for="Calories" class="form-control">
         </div>
      </div>
      <div class="form-group">
         <label asp-for="Description" class ="control-label col-sm-3"></label>
         <span asp-validation-for="Description" class="text-danger"></span>
         <div class="col-sm-8">
            <textarea type="text" asp-for="Description" class="form-control"></textarea>
         </div>
      </div>
      <div class="form-group">
         <label asp-for="Tastiness" class ="control-label col-sm-3"></label>
         <span asp-validation-for="Tastiness" class="text-danger"></span>
         <div class="col-sm-8">
            <select asp-for="Tastiness" class="form-control">
               <option value="1">1</option>
               <option value="2">2</option>
               <option value="3">3</option>
               <option value="4">4</option>
               <option value="5">5</option>
            </select>
         </div>
      </div>
      <div class="form-group">
         <div class="col-sm-offset-2 col-sm-8">
            <input type="submit" value="Edit Dish" class="btn btn-primary">
         </div>
      </div>
   </form>
</div>