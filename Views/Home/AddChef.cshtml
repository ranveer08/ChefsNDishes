@model Chef
<div class="container" style="max-width:600px;padding:40px 20px; background:#ebeff2">
   <h3><a href="/" class="btn btn-primary">Home</a></h3>
   <h1 class="text-center">Add a Chef!</h1>
   <form class="form-horizontal" role="form"  asp-action="AddChef" asp-controller = "Home" method="post">
      <div class="form-group">
         <label asp-for="FirstName" class ="control-label col-sm-3"></label>
         <span asp-validation-for="FirstName" class="text-danger"></span>
         <div class="col-sm-8">
            <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter First name">
         </div>
      </div>
      <div class="form-group">
         <label asp-for="LastName" class ="control-label col-sm-3"></label>
         <span asp-validation-for="LastName" class="text-danger"></span>
         <div class="col-sm-8">
            <input type="text" asp-for="LastName" class="form-control" placeholder="Enter Last name">
         </div>
      </div>
      <div class="form-group">
         <label asp-for="DateOfBirth" class="control-label col-sm-3"></label>
         <span asp-validation-for="DateOfBirth" class="text-danger"></span>
         <div class="col-sm-8">
            <input type="date" asp-for="DateOfBirth" class="form-control">
         </div>
      </div>
      <div class="form-group">
         <div class="col-sm-offset-2 col-sm-8">
            <input type="submit" value="Add Chef" class="btn btn-primary">
         </div>
      </div>
   </form>
</div>