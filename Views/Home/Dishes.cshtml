@model Dish
<div class="container">
   <h1 class="text-center"><a href="/" >Chefs</a> | Dishes </h1>
   <div class="center-outer">
      <div class="center-inner">
         <div class="bubbles">
            <h2>Yum, take a look at our tasty dishes!</h2>
         </div>
      </div>
   </div>
</div>
<h2><a href="/dishes/new" class="new-dish btn btn-primary pull-right">Add a Dish</a></h2>
<hr>
<table class="table table-striped table-dark">
   <thead>
      <tr>
         <th scope="col">Name</th>
         <th scope="col">Chef</th>
         <th scope="col">Tastiness</th>
         <th scope="col">Calories</th>
      </tr>
   </thead>
   <tbody class="pre-scrollable">
      @foreach (var dish in ViewBag.AllDishes)
      {
      <tr>
         <td class="c">@dish.Name</td>
         <td class="c">@dish.Chef.FirstName</td>
         <td>@dish.Tastiness</td>
         <td>@dish.Calories</td>
         <td><a asp-action="EditDish" asp-controller="Home" asp-route-dishId="@dish.DishId" class = "btn btn-primary" id = "buttonSpace">Edit</a><a asp-action="Details" asp-controller="Home" asp-route-dishId="@dish.DishId" class = "btn btn-primary" id = "buttonSpace">Show</a><a asp-action="Delete" asp-controller="Home" asp-route-dishId="@dish.DishId" class = "btn btn-danger" id = "buttonSpace">Delete</a></td>
      </tr>
      }
   </tbody>
</table>
